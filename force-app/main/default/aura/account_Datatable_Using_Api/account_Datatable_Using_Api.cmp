<aura:component Controller="getAccount_From_Urlmapping" implements="flexipage:availableForAllPageTypes">
    <aura:attribute name="data" type="object"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="accForm" type="Account" default="{'sobjectType' : 'Account'}"/>
    <aura:attribute name="accFormEdit" type="Account" default="{'sobjectType' : 'Account'}"/>
    <aura:attribute name="isModalEdit" type="boolean" default="false"/>
    <aura:attribute name="rowid" type="Account" default="{}"/>

    <aura:handler name="init" value="{! this }" action="{! c.init }"/>

    <div class="slds-line-height_reset " aura:id="datatable">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
              <div class="slds-media__figure">
                <span class="slds-icon_container slds-icon-standard-account" title="description of icon when needed">
                    <lightning:icon iconName="standard:account" size="large" alternativeText="List account"/>
                </span>
              </div>
              <div class="slds-media__body">
                <h2>
                  <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Account">
                    <span class="slds-text-heading_small">Account List</span>
                  </a>
                </h2>
              </div>
            </header>
            <div class="slds-no-flex">
              <lightning:button label="New Account" iconPosition="right" variant="brand" onclick="{!c.newPopup}"/>
            </div>
          </div>
        <div style="height: auto;">
            <lightning:datatable
                columns="{! v.columns }"
                data="{! v.data }"
                keyField="id"
                hideCheckboxColumn="true"
                onrowaction="{! c.handleRowActions }"
                showRowNumberColumn="true"
                />
        </div>
        
    </div>

     
    <div class="slds-m-around_xx-large">
        
        <aura:if isTrue="{!v.isModalEdit}">
             
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{! c.closeModel }"
                                              alternativeText="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Edit Account Information</h2>
                    </header>

                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <lightning:input type="Text" label="Account Name" value="{!v.accFormEdit.Name}"/>
                        <lightning:input type="Text" label="Annual Revenue" value="{!v.accFormEdit.AnnualRevenue}"/>
                        <lightning:input type="Text" name="Account Number" value="{!v.accFormEdit.AccountNumber}" label="Account Number"/>
                        <lightning:input type="Text" label="Phone" value="{!v.accFormEdit.Phone}"/>
                    </div>

                    <footer class="slds-modal__footer">
                        <lightning:button variant="neutral"
                                          label="Cancel"
                                          title="Cancel"
                                          onclick="{! c.closeModel }"/>
                        <lightning:button variant="brand"
                                          label="Update"
                                          title="OK"
                                          onclick="{!c.Updateacc}"/>
                    </footer>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </aura:if>
    </div>

</aura:component>